<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.artworkContainer {
			width: 100px;
			height: 100px;
		}
		.artwork {
			max-width: 100px;
			max-height: 100px;
		}
		.fieldLabel {
			
		}
		.fieldText {
			
		}
	</ui:style>
	
	<g:HTMLPanel>
		<table>
			<tr>
				<td rowspan="2" class="{style.artworkContainer}"><g:Image ui:field="coverArtwork" styleName="{style.artwork}"/></td>
				<td class="{style.fieldLabel}"><g:Label text="Id"/></td>
				<td class="{style.fieldText}"><g:LongBox ui:field="idField" readOnly="true"/></td>
			</tr>
			<tr>
				<td class="{style.fieldLabel}"><g:Label text="Titel"/></td>
				<td class="{style.fieldText}"><g:TextBox ui:field="titleField" readOnly="true"/></td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 