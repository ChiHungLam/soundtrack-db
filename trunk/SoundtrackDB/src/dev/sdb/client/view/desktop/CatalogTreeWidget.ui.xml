<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.stage {
			position:relative;
			width: 100%;
			height: 100%;
		}
		
		.treeScrollPanel {
			width: 420px;
			height: 100%;
			border: 1px solid #ccc;
		}
		.tree {
			width: 400px;
		}
		.releaseContainer {
			position:absolute;
			top:0px;
			bottom:0px;
			left:420px;
			right:0px;
		}
		.releaseLabel {
			position:absolute;
			top:10px;
			left:20px;
		}
		.releaseScrollPanel {
			position:absolute !important;

			top:30px;
			left:20px;
			right:20px;
			bottom:35px;
			
			border: 1px solid #ccc;
		}
		
		.releaseTable {
			position:relative;
		}
		
		.releasePagerContainer {
			position:absolute;
			left:20px;
			right:20px;
			bottom:0px;
		}
		.releasePager {
			display: inline-block;
		}
	</ui:style>
	
	<g:FlowPanel addStyleNames="{style.stage}">
	
		<g:ScrollPanel addStyleNames="{style.treeScrollPanel}">
			<c:CellTree ui:field="catalogCellTree" addStyleNames="{style.tree}"/>
		</g:ScrollPanel>
		
		<g:FlowPanel addStyleNames="{style.releaseContainer}">
			<g:Label ui:field="selectionInfoLabel" addStyleNames="{style.releaseLabel}"/>
			
			<g:ScrollPanel ui:field="releaseTableScroll" addStyleNames="{style.releaseScrollPanel}">
				<c:CellTable ui:field="releaseTable" addStyleNames="{style.releaseTable}"/>
			</g:ScrollPanel>
			
			<g:FlowPanel addStyleNames="{style.releasePagerContainer}">
				<c:SimplePager ui:field="releasePager" addStyleNames="{style.releasePager}"/>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
	
</ui:UiBinder> 