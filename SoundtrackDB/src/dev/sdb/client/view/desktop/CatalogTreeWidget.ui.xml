<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.tree {
			width: 400px;
		}
		.treePanel {
			width: 420px;
			height: 100%;
			border: 1px solid #ccc;
		}
		.listPanel {
			width: 500px;
		}
	</ui:style>
	
	<g:HorizontalPanel height="100%" >
		<g:ScrollPanel ui:field="scrollPanel" addStyleNames='{style.treePanel}'>
			<c:CellTree ui:field="cellTree" addStyleNames='{style.tree}'/>
		</g:ScrollPanel>
		<g:VerticalPanel spacing="10" styleName="{style.listPanel}">
			<g:Label ui:field="selectionInfoLabel"/>
			<g:Cell>
				<g:VerticalPanel ui:field="tablePanel" width="100%">
					<g:Cell height="600">
						<g:ResizeLayoutPanel height="100%">
							<c:DataGrid ui:field='dataGrid'/>
						</g:ResizeLayoutPanel>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<c:SimplePager ui:field="pager"/>
					</g:Cell>
				</g:VerticalPanel>
			</g:Cell>
		</g:VerticalPanel>
	</g:HorizontalPanel>
	
</ui:UiBinder> 