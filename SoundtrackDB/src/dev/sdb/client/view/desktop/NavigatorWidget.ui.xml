			-moz-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-o-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			transition: text-shadow 0.5s, color 0.5s;
		}
		
		.contentLink a:link {
			color: #6A5FA8;
			
			-webkit-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-moz-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-o-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			transition: text-shadow 0.5s, color 0.5s;
		}
		
		.contentLink a:visited {
			color: #6A5FA8;
			
			-webkit-transition: text-shadow 0.5s, color 0.5s; /* Safari */	
			-moz-transition: text-shadow 0.5s, color 0.5s; /* Safari */	
			-o-transition: text-shadow 0.5s, color 0.5s; /* Safari */	
			transition: text-shadow 0.5s, color 0.5s;
		}
		
		.contentLink a:hover {
			text-shadow: 0 0 14px black;
			text-decoration: none;
			
			-webkit-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-moz-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-o-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			transition: text-shadow 0.5s, color 0.5s;
		}
		
		.contentLink.highlighted {
			font-weight: bold;
			text-shadow: 0 0 14px black;
		}
		
		.contentLink.highlighted a:link {
			color: #453F6B;

			-webkit-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-moz-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-o-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			transition: text-shadow 0.5s, color 0.5s;
		}
		
		.contentLink.highlighted a:visited {
			color: #453F6B;

			-webkit-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-moz-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			-o-transition: text-shadow 0.5s, color 0.5s; /* Safari */
			transition: text-shadow 0.5s, color 0.5s;
		}
