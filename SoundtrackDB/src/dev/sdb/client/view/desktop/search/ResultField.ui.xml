<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.tableScrollPanel {
			height: 100%;
			border: 1px solid #ccc;
		}
	</ui:style>
			
	<g:HTMLPanel>
		<g:VerticalPanel width="100%" height="100%" spacing="10">
			<g:Label ui:field="lastSearchLabel"/>
			<g:Label ui:field="selectionInfoLabel"/>
			<g:Cell>
				<g:VerticalPanel ui:field="tablePanel" width="100%">
					<g:Cell height="600">
						<g:ScrollPanel addStyleNames="{style.tableScrollPanel}">
							<c:CellTable ui:field="table"/>
						</g:ScrollPanel>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<c:SimplePager ui:field="pager"/>
					</g:Cell>
				</g:VerticalPanel>
			</g:Cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 