<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.searchTermStyle {
			font-weight: bold;
		}
		.errorLabelStyle {
			color: red;
		}
		.findButtonStyle {
			display: block;
			font-size: 16pt;
			font-weight: bold;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="5">
				<g:Label text="Suche:"/>
				<g:TextBox ui:field="searchTerm" styleName="{style.searchTermStyle}"/>
				<g:Button ui:field="findButton" styleName="{style.findButtonStyle}">Finde</g:Button>
			</g:HorizontalPanel>			
			<g:Label ui:field="errorLabel" styleName="{style.errorLabelStyle}"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
	
</ui:UiBinder> 